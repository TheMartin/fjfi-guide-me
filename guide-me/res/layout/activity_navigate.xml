<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NavigateActivity" >

    <TextView
        android:id="@+id/navigate_tv_vypis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/navigate_tv_vypis" />

    <Button
        android:id="@+id/navigate_bt_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="navigate_bt_next_OnClick"
        android:text="@string/navigate_bt_next" />

    <Button
        android:id="@+id/navigate_bt_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/navigate_bt_next"
        android:layout_alignBottom="@+id/navigate_bt_next"
        android:layout_toLeftOf="@+id/navigate_bt_next"
        android:onClick="navigate_bt_previous_OnClick"
        android:text="@string/navigate_bt_previous" />

    <Button
        android:id="@+id/navigate_bt_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigate_bt_previous"
        android:layout_alignLeft="@+id/navigate_bt_previous"
        android:onClick="navigate_bt_start_OnClick"
        android:text="@string/navigate_bt_start" />

</RelativeLayout>