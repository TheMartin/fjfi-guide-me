<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_margin="10dp">

    <EditText
        android:id="@+id/dialog_download_et_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:inputType="textNoSuggestions"
        android:hint="@string/dialog_download_et_search_hint"
        android:layout_centerHorizontal="true"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <ListView
        android:id="@+id/dialog_download_lv_maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/dialog_download_et_search"
        android:layout_centerHorizontal="true"
        tools:listitem="@layout/item_download_map" >
    </ListView>

</RelativeLayout>